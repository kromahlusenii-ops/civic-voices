# App URL (for share links - auto-detected on Vercel, set for custom domains)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/civic_voices"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-secret-key-change-in-production"

# Google OAuth (get credentials from https://console.cloud.google.com/apis/credentials)
# Required for authentication
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Reddit API (OAuth) - Legacy, use SociaVault instead
# Reddit is now accessed via SociaVault API (see SOCIAVAULT_API_KEY above)
REDDIT_CLIENT_ID="placeholder"
REDDIT_CLIENT_SECRET="placeholder"
REDDIT_USER_AGENT="civic-voices:v1.0.0 (development)"

# X (Twitter) API
# Option 1: Official Twitter API (expensive - $5000/mo for 1M tweets)
X_BEARER_TOKEN="your-x-bearer-token"
X_ACCESS_TOKEN="your-x-access-token"
X_ACCESS_TOKEN_SECRET="your-x-access-token-secret"

# Option 2: The Old Bird V2 via RapidAPI (cheaper - $180/mo for 1M tweets)
# Get your key at: https://rapidapi.com/omarmhaimdat/api/twitter-v24
# If configured, this takes priority over the official API
X_RAPIDAPI_KEY="your-rapidapi-key"

# SociaVault API (for TikTok and Reddit - recommended)
# Get your key at: https://sociavault.com
# If configured, takes priority over TikAPI for TikTok
SOCIAVAULT_API_KEY="your-sociavault-api-key"

# TikTok API (TikAPI.io) - fallback if SociaVault not configured
TIKTOK_OAUTH_CLIENT_ID="your-tikapi-client-id"
TIKTOK_API_KEY="your-tikapi-key"
TIKTOK_API_URL="https://api.tikapi.io"

# YouTube API (get from https://console.cloud.google.com/apis/credentials)
# Enable YouTube Data API v3 in your Google Cloud project
YOUTUBE_API_KEY="your-youtube-api-key"

# Bluesky API (create app password at https://bsky.app/settings/app-passwords)
# Note: Identifier should be without the @ symbol
BLUESKY_IDENTIFIER="your-handle.bsky.social"
BLUESKY_APP_PASSWORD="your-app-password"

# Truth Social API (requires a Truth Social account)
# Uses OAuth 2.0 password grant for authentication
TRUTHSOCIAL_USERNAME="your-truthsocial-username"
TRUTHSOCIAL_PASSWORD="your-truthsocial-password"

# Supabase (get config from https://supabase.com/dashboard/project/_/settings/api)
# Required for Authentication
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# LLM Providers
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Stripe (get from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_PRICE_ID=price_your_price_id
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

ADMIN_EMAIL=your-admin-email@example.com
